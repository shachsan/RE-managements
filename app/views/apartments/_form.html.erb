

<%= form_for @apartment do |t|%>
  <%= t.label :name %>
  <%= t.text_field :name %><br>
  <%= t.label "Unit Number" %>
  <%= t.text_field :unit_no %><br>
  <%= t.label "Size (sqft)" %>
  <%= t.number_field :size %><br>
  <%= t.label '# of bedrooms' %>
  <%= t.number_field :bedrooms %><br>
  <%= t.label :rent %>
  <%= t.number_field :rent %><br>
  <%= t.label :electricity %>
  <%= t.check_box :electricity %><br>
  <%= t.label :water %>
  <%= t.check_box :water %><br>
  <%= t.label :gas %>
  <%= t.check_box :gas %><br>
  <%= t.label :Building %>
  <%= t.collection_select :building_id, @buildings, :id, :name %><br>
  <%= t.submit %>
<% end %>
