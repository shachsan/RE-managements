<h1 class="body_div"align="center">Edit your profile</h1>
<%= render 'layouts/errors', :object => @agent %><br>

<div class='row body_div'>

  <div class='col-xs-12'>

    <%= form_for(@agent, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">

      <div class="control-label col-sm-2">

        <%= f.label :name %>

      </div>

      <div class="col-sm-8">

        <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>

      </div>

    </div>

    <div class="form-group">

      <div class="control-label col-sm-2">

        <%= f.label :email %>

      </div>

      <div class="col-sm-8">

        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>

      </div>

      <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">

          <%= f.submit "Update", class: 'btn btn-primary btn-lg' %>

        </div>

      </div>

      <% end  %>
      <div class="col-xs-4 col-xs-offset-4"></div>
    </div>
  </div>
